---
interface Props {
    selected: number;
}

const { selected } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Dashboard</title>
    </head>
    <body>
        <main class="layout">
            <aside>
                <a href="/" class="brand">
                    <h1>DBL BOX</h1>
                </a>
                <nav>
                    <ul>
                        <li class={selected == 1 ? "selected" : ""}>
                            <a href="/dashboard/characters">Personajes</a>
                        </li>
                        <li class={selected == 2 ? "selected" : ""}>
                            <a href="/dashboard/equips">Equipamientos</a>
                        </li>
                        <li class={selected == 3 ? "selected" : ""}>
                            <a href="/dashboard/users">Usuarios</a>
                        </li>
                    </ul>
                </nav>
            </aside>
            <main class="container">
                <slot />
            </main>
        </main>
    </body>
</html>

<style is:global>
    /* CSS Reset and Base Styles */
    *,
    *::after,
    *::before {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
        border: none;
    }

    /* CSS Custom Properties */
    :root {
        /* Colors */
        --bg-main: rgb(10, 22, 37);
        --bg-nd: rgba(212, 175, 55, 1);
        --bg-nd-01: rgba(212, 175, 55, 0.1);
        --bg-nd-05: rgba(212, 175, 55, 0.5);
        --bg-nd-005: rgba(212, 175, 55, 0.05);
        --bg-rd: #ececec;
        --bg-rd-1: rgba(229, 234, 240, 1);
        --bg-rd-2: rgba(241, 245, 249, 1);

        /* Typography */
        --font-size-base: 1.15rem;
        --font-size-lg: 2rem;
        --font-weight-normal: 400;
        --font-weight-bold: 600;

        /* Spacing */
        --spacing-sm: 0.75rem;
        --spacing-md: 1.25rem;
        --spacing-lg: 1.5rem;
        --spacing-xl: 2rem;
        --spacing-2xl: 2.5rem;

        /* Animation */
        --transition-normal: 240ms ease-in-out;

        /* Layout */
        --sidebar-width: 16.666%; /* 1/6 of the grid */
        --border-radius: 1rem;
    }

    /* Base Styles */
    html {
        color: var(--bg-main);
        font-size: 12px;
        font-family:
            system-ui,
            -apple-system,
            BlinkMacSystemFont,
            "Segoe UI",
            Roboto,
            Oxygen,
            Ubuntu,
            Cantarell,
            "Open Sans",
            "Helvetica Neue",
            sans-serif;
        line-height: 1.5;
    }

    html,
    body {
        width: 100%;
        height: 100%;
        background-color: var(--bg-rd);
        scrollbar-gutter: auto;
        font-size: var(--font-size-base);
        overflow: hidden;
    }

    /* Layout */
    main.layout {
        width: 100%;
        height: 100%;
        display: grid;
        grid-template-columns: var(--sidebar-width) 1fr;
        grid-template-areas: "sidebar content";
    }

    /* Sidebar */
    aside {
        grid-area: sidebar;
        background: var(--bg-main);
        color: #f1f1f1;
        padding: var(--spacing-xl) var(--spacing-2xl);
        display: flex;
        flex-direction: column;
        gap: var(--spacing-xl);
    }

    .brand {
        text-decoration: none;
        color: #f1f1f1;
        display: inline-block;
    }

    .brand h1 {
        font-weight: 600;
        font-size: var(--font-size-lg);
        line-height: 1;
    }

    /* Navigation */
    nav ul {
        display: flex;
        flex-direction: column;
        width: 100%;
        gap: var(--spacing-md);
    }

    nav li {
        font-size: var(--font-size-base);
        list-style-type: none;
        position: relative;
        border-radius: var(--border-radius);
    }

    nav li a {
        color: #f1f1f1;
        text-decoration: none;
        padding: var(--spacing-sm) var(--spacing-lg);
        display: block;
        font-weight: var(--font-weight-bold);
        transition: color var(--transition-normal);
    }

    /* Selected State */
    nav li.selected {
        position: relative;
        z-index: 1;
    }

    nav li.selected::before {
        content: "";
        position: absolute;
        inset: 0;
        width: 150%;
        background-color: rgba(255, 255, 255, 0.15);
        border: solid 4px rgba(255, 255, 255, 0.15);
        border-radius: 0 var(--border-radius) var(--border-radius) 0;
        z-index: -1;
        left: -50%;
    }

    /* Hover State */
    nav li:not(.selected) {
        transition: background-color var(--transition-normal);
    }

    nav li:not(.selected):hover {
        background: #f1f1f1;
    }

    nav li:not(.selected):hover a {
        color: var(--bg-main);
    }

    /* Content Area */
    .container {
        grid-area: content;
        padding: var(--spacing-xl) var(--spacing-2xl);
        overflow: auto;
        overflow-x: hidden; /* Evita el scroll horizontal */
        max-width: 100%; /* Asegura que no se desborde */
        word-wrap: break-word; /* Permite el ajuste de palabras largas */
        overflow-wrap: break-word;
    }

    /* Para el caso en que haya elementos internos que se desborden */
    .container > * {
        max-width: 100%;
        box-sizing: border-box;
    }

    .container::-webkit-scrollbar {
        width: 8px;
    }

    .container::-webkit-scrollbar-track {
        background: var(--bg-rd-1);
    }

    .container::-webkit-scrollbar-thumb {
        background-color: var(--bg-nd-05);
        border-radius: 20px;
    }

    /* Responsive Design */
    @media (max-width: 768px) {
        main.layout {
            grid-template-columns: 1fr;
            grid-template-areas:
                "sidebar"
                "content";
        }

        aside {
            padding: var(--spacing-md);
        }

        .container {
            padding: var(--spacing-md);
        }

        nav li {
            font-size: var(--font-size-base);
        }
    }

    /* High Contrast Mode */
    @media (prefers-contrast: high) {
        :root {
            --bg-main: #000000;
            --bg-rd: #ffffff;
        }

        nav li.selected::before {
            border-color: #ffffff;
        }
    }

    /* Reduced Motion */
    @media (prefers-reduced-motion: reduce) {
        *,
        *::before,
        *::after {
            animation-duration: 0.01ms !important;
            animation-iteration-count: 1 !important;
            transition-duration: 0.01ms !important;
            scroll-behavior: auto !important;
        }
    }
</style>
