---
import Header from "../components/Header.astro";

interface Props {
	Title: string;
}

const { Title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>DBL BOX - {Title}</title>
	</head>
	<body>
		<main class="layout">
			<Header />
			<slot />
		</main>
	</body>
</html>

<style is:global>
	* {
		box-sizing: border-box;
		margin: 0;
		padding: 0;
		border: none;
	}

	:root {
		--bg-main: rgb(10, 22, 37);
	}

	html {
		color: #f1f1f1;
		font-size: 12px;
		font-family:
			system-ui,
			-apple-system,
			BlinkMacSystemFont,
			"Segoe UI",
			Roboto,
			Oxygen,
			Ubuntu,
			Cantarell,
			"Open Sans",
			"Helvetica Neue",
			sans-serif;
	}

	html,
	body {
		width: 100%;
		height: 100%;
		background-color: var(--bg-main);
		scrollbar-gutter: auto;
		font-size: 1.15rem;
	}

	main.layout {
		height: auto;
		margin: 0 auto;
		position: relative;
	}

	@media (max-width: 768px) {
		main.layout {
			max-width: 100%;
		}
	}

	@media (min-width: 1440px) {
		main.layout {
			max-width: 1280px;
		}
	}
</style>
