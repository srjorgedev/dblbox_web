        }

        .character-banner {
            display: flex;
            position: relative;
            outline: 1px solid;
            margin-bottom: 1rem;

            img:not(img.bchacut),
            article.text,
            .buttons,
            .rarity-lf {
                position: absolute;
            }

            article.rarity-lf {
                top: var(--br);
                display: flex;
                flex-direction: column;

                .character-rarity {
                    position: relative;
                    aspect-ratio: 512/128;
                    width: 40%;
