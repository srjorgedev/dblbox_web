            }

            article.ability {
                padding: 0 var(--br);

                h3 {
                    margin: 0 0 0.25rem 0;
                    font-size: 1rem;
                    font-weight: 600;
                    color: #e2e2e2;
                }
                pre {
                    margin-bottom: 1rem;
                    font-size: 0.7rem; /* Estilo base para m√≥vil */

