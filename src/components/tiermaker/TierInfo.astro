---
interface Props {
    rarPath: string;
}

enum TextRarity {
    "he" = "HERO",
    "ex" = "EXTREME",
    "sp" = "SPARKING",
    "ul" = "ULTRA",
    "ll" = "Legends Limited",
    "sp&ul" = "SPARKING & ULTRA",
    "ll&ul" = "LEGENDS LIMITED & ULTRA"
}

const { rarPath } = Astro.props;
---

